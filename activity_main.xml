<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Cards Details"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/cardimg"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/image" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="135dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="25dp"
        android:text="BANK NAME"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

        <TextView
            android:id="@+id/tvcode"
            android:layout_width="244dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="88dp"
            android:text="@string/code"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
        android:id="@+id/tvmonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:layout_marginStart="7dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="7dp"
        android:textSize="18dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="142dp"
        android:text="/"
        android:textColor="@android:color/white"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/tvyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="142dp"
        android:textColor="@android:color/white"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="165dp"
        android:text="MM"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="165dp"
        android:text="YY"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="223dp"
        android:text="CardHolder Name"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tvcvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:textColor="@android:color/white"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="CVV"
        android:textColor="@android:color/white"
        android:textSize="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="0dp"
            android:text="Enter 16 Digit Card Number"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etcode1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="XXXX"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etcode2"
            android:layout_toEndOf="@+id/etcode1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="XXXX"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/etcode1" />
        <EditText
            android:id="@+id/etcode3"
            android:layout_toEndOf="@+id/etcode2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="XXXX"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/etcode2" />
        <EditText
            android:id="@+id/etcode4"
            android:layout_toEndOf="@+id/etcode3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="XXXX"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/etcode3" />



        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="35dp"
            android:text="Cardholder Name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etname"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:text="Expiry"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/etmonth"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="0dp"
            android:ems="10"
            android:inputType="number"
            android:hint="MM"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etyear"
            android:layout_toEndOf="@+id/etmonth"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="YY"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:imeOptions="actionNext"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/etmonth" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvcv"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:text="CVV"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etcvv"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:layout_below="@+id/tvcv"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-1dp"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvcv"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="33dp"
            android:text="Proceed to Pay"
            android:textColor="@android:color/black"
            android:textSize="18dp" />


    </RelativeLayout>



</RelativeLayout>